# Quantum Simulator Backend - Environment Configuration
# Copy this file to .env and modify as needed

# Application settings
QSIM_APP_NAME="Quantum Circuit Simulator"
QSIM_APP_VERSION="3.0.0"
QSIM_DEBUG=false

# CORS settings (JSON array of allowed origins)
# For production, specify exact origins instead of *
# Note: "null" allows testing from file:// URLs (test_form.html opened directly)
QSIM_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","null"]
QSIM_CORS_ALLOW_CREDENTIALS=true

# HPC Resource settings
QSIM_HPC_TOTAL_CORES=64
QSIM_HPC_TOTAL_GPUS=4
QSIM_HPC_TOTAL_MEMORY_GB=128.0

# Job settings
QSIM_HPC_JOB_CYCLE_DELAY=0.1
QSIM_HPC_JOB_RETENTION_HOURS=24
QSIM_HPC_MAX_JOBS=1000

# Quantum system settings
QSIM_QUANTUM_MAX_QUBITS=25
QSIM_QUANTUM_SYSTEM_TTL_HOURS=24
QSIM_QUANTUM_MAX_SYSTEMS=100

# Rate limiting (optional)
QSIM_RATE_LIMIT_ENABLED=false
QSIM_RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
QSIM_LOG_LEVEL=INFO

# Server settings
QSIM_HOST=0.0.0.0
QSIM_PORT=8000
